<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardlayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/carditemimage"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/carditemimage" />

    <TextView
        android:id="@+id/carditemname"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/carditemimage"
        android:layout_toRightOf="@id/carditemimage"
        android:gravity="start"
        android:text="@string/carditemname"
        android:textAlignment="center"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/additemtocartbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        android:contentDescription="@string/additemtocartbutton"
        app:srcCompat="@drawable/add_button2_img" />

</RelativeLayout>