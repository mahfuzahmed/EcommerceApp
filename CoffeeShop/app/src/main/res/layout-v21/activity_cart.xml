<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cart"
    android:background="#FFFFFF">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tag"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="CART"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp"/>
    </Toolbar>


    <RelativeLayout
        android:id="@+id/priceSection"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">

        <TextView
            android:id="@+id/reciept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="details"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/prices"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            />

    </RelativeLayout>

    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/priceSection"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/totalMedTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="198dp"
        android:text="Total Price"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/totalMedPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/totalMedTag"
        android:layout_alignParentEnd="true"
        android:text="0/="
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/deliveryTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="156dp"
        android:layout_marginLeft="10dp"
        android:text="Delivery charge"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/deliveryCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/deliveryTag"
        android:layout_alignParentEnd="true"
        android:text="25/="
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        />

    <RelativeLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFA500"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:textSize="18sp"
            android:text="Total : "
            />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/totalPrice"
            android:layout_alignTop="@+id/totalPrice"
            android:textColor="#000000"
            android:text=" 0/= Taka"/>

        <Button
            android:id="@+id/orderNowButton"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:padding="0dp"
            android:text="Order now"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>

</RelativeLayout>